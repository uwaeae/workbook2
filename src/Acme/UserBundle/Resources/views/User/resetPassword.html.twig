{# src/Acme/SecurityBundle/Resources/views/Security/login.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block title %}Conti Tire Management - Login{% endblock %}

{% block bodyclass %}login{% endblock %}
{% block body %}


    <img src="/img/pdfs-login.png" width="670" height="635" alt=""/>


    <div id="login-box">
        <h1><span class="conti">Conti</span>TireManagement</h1>
        <div class="wrap">
            <h2>{% trans %}login{% endtrans %}</h2>
            {% if error is defined and error %}
                <div class="alert alert-error alert-block fade in">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    {{ error|trans }}
                </div>
            {% endif %}
            {% if info is defined and info%}
                <div class="alert alert-info alert-block fade in">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    {{ info|trans }}
                </div>
            {% endif %}

            <form action="{{ path('resetPassword') }}" method="post" id="forgotpasswordform">
                {{ form_errors(form) }}
                <label for="form_user">{% trans %}user.username{% endtrans %}</label>
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-user">&nbsp;</i></span>
                    {{ form_widget(form.user) }}
                </div>
                <div class="input-prepend" style="height: 30px;">
                    &nbsp;
                </div>


                {{ form_rest(form) }}

                <div class="buttons">
                    <a id="cancelrequest" class="btn" href="{{ path('login') }}">{% trans %}login.loginbutton{% endtrans %}</a>
                    <button type="submit" class="btn btn-conti">{% trans %}login.request{% endtrans %}</button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}