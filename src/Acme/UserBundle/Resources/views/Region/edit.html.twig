{% extends '::base.html.twig' %}

{% block stylesheets %}
{{ parent() }}

{% endblock %}

{% block title %}Conti Tire Management - Admin - Region{% endblock %}


{% block body %}
<h1>{% trans %}region.edit{% endtrans %}</h1>

<form class="form-horizontal" action="{{ path('region_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div class="buttons">

        <a class="btn" href="{{ path('region') }}">
            <i class="icon-remove removecolor"></i>
            {% trans %}cancel{% endtrans %}
        </a>

        <a href="#" class="submitform btn">{% trans %}save{% endtrans %} <i class="icon-plus createcolor"></i></a>

    </div>
</form>
{% endblock %}