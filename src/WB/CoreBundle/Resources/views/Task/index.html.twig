<h1>Task list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Start</th>
            <th>End</th>
            <th>Scheduled</th>
            <th>Break</th>
            <th>Overtime</th>
            <th>Info</th>
            <th>Approach</th>
            <th>Correctiontime</th>
            <th>Correctioninfo</th>
            <th>Createdat</th>
            <th>Createdfrom</th>
            <th>Updatedat</th>
            <th>Updatedfrom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('task_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.start %}{{ entity.start|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.end %}{{ entity.end|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.scheduled }}</td>
            <td>{{ entity.break }}</td>
            <td>{{ entity.overtime }}</td>
            <td>{{ entity.info }}</td>
            <td>{{ entity.approach }}</td>
            <td>{{ entity.correctionTime }}</td>
            <td>{{ entity.correctionInfo }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.createdFrom }}</td>
            <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.updatedFrom }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('task_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('task_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('task_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
