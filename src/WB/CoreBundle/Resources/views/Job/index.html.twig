{# src/WB/CoreBundle/Resurces/views/nav/index.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block title %}Workbook 2.0 {% endblock %}


{% block body %}


    <div class="tabbable tabs-left"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
    {% for key,entities in job_array %}
        <li {% if loop.first %}class="active"{% endif %}><a href="#{{ key }}" data-toggle="tab">{{ key|trans }} </a></li>
    {% endfor %}
    </ul>
        <div class="tab-content">

            {% for key,entities in job_array %}

            {% if   %}

            {% else %}

                <div class="tab-pane {% if loop.first %}active{% endif %}" id="{{ key }}">

                    <table class="records_list">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Contactperson</th>
                            <th>Contactinfo</th>
                            <th>End</th>
                            <th>Start</th>
                            <th>Timeed</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr onclick="document.location = '{{ path('job_show', { 'id': entity.id }) }}'">
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.contactPerson }}</td>
                                <td>{{ entity.contactInfo }}</td>
                                <td>{% if entity.end %}{{ entity.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if entity.start %}{{ entity.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if entity.timeed %}{{ entity.timeed|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ entity.description }}</td>

                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('job_show', { 'id': entity.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('job_edit', { 'id': entity.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endif %}
            {% endfor %}
        </div>
        </div>


{% endblock %}