                        <span class="text2">{{entity.jobState}}</span><img class="bild" src="/img/glyphicons_png/glyphicons_204_unlock.png"/>
                        {% elseif entity.jobState.id == 2 %}
                        <span class="text2">{{entity.jobState}}</span><img class="bild" src="/img/glyphicons_png/glyphicons_203_lock.png"/>
                        {% endif %}
                    </th>
                    <th>Typ <span class="text2">(*VAR*)</span></th>
                </tr><tr>
                    <th>Ende  <span class="text2">{{ entity.end|date("d.m.y H:i") }}</span></th>
                    <th>Beginn  <span class="text2">{{ entity.start|date("d.m.y H:i") }}</span></th>
                    <th></th>
                </tr>
            </table>


            <div class="box">
                Auftrag <b>{{ entity.description }}
            </div>

            <div class="box">
                Dateien

                <table class="downloadbox" frame="vsides" frame="hsides">
                    <tr>
                        <th>(*DATEINAME*)</th>
                        <th>(*DATEIGRÖ?E*)</th>
                        <th>(*ANSEHNBUTTON*)</th>
                        <th>(*DOWN_BUTTON*)</th>
                    </tr>
                    <tr>
                        <th>(*DATEINAME*)</th>
                        <th>(*DATEIGRÖ?E*)</th>
                        <th>(*ANSEHNBUTTON*)</th>
                        <th>(*DOWN_BUTTON*)</th>
                    </tr>

                </table>

                >NEUE DATEI BUTTON<

            </div>
        </div>

        <div class="right column">

            <table class="box">
                <tr>
                    <th>Auftraggeber</th>
                    <th><span class="text2">(*KUNDENNAME*)</span></th>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <th><span class="text2">(*KUNDENADRESSE*)</span></th>
                </tr>
            </table>
            <div class="box">
                (*GOOGLEMAPS*)
            </div>
        </div>
    </div>
</div>

{% endblock %}


{% block body2 %}
<h1 style="background-color: black; outline:1px grey solid;">Job</h1>

<div  style="background-color: black; outline:1px grey solid;">
    <table class="record_properties"> 
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>

            </tr>
            <tr>
                <th>Contactperson</th>
                <td>{{ entity.contactPerson }}</td>
            </tr>
            <tr>
                <th>Contactinfo</th>
                <td>{{ entity.contactInfo }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ entity.end|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ entity.start|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Timeed</th>
                <td>{{ entity.timeed|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Timeinterval</th>
                <td>{{ entity.timeinterval }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Createdfrom</th>
                <td>{{ entity.createdFrom }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedfrom</th>
                <td>{{ entity.updatedFrom }}</td>
            </tr>
        </tbody>
    </table>
</div>

<ul class="record_actions">
    <li>
        <a href="{{ path('job') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('job_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('job_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
    </ul>
{% endblock %}